#lang racket
(require lac-camp/server)

(define (Intro request)
  `(*TOP*
     (html
       (head
        )
       (body
        (form (@ (method "get")
                 (action "home"))
              (h2 "Enter your name!")
              (input (@ (type "text")
                        (name "name")))
              (br)
              (input (@ (type "submit")
                        (value "Start Game!"))))
        ))))

(define (Home request)
  `(*TOP*
     (html
       (head
        )
       (body
        (h1 ,(get "name" request "Name"))
        ))))

(serve-procedure "" Intro)
(serve-procedure "home" Home)
(start-server)